{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["es6", "es2018.promise"],
      "jsx": "react-native",
      "noEmit": true,
      "strict": true,
      "noUnusedLocals": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": ".",
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules/*", "babel.config.js", "metro.config.js", "jest.config.js"],
  }
  